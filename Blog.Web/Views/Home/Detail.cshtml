@{
}
@model ArticleDto


<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="blog-post">
                                <div class="blog-thumb w-50">
                                    <img src="~/images/@Model.Image.FileName" width="300" height="500" alt="resim bulunamadı" />
                                </div>
                                <div class="down-content">
                                    <a href="#"><h4>@Model.Title</h4></a>
                                    <ul class="post-info">
                                        <li>@Model.CreatedDate.ToString("dd/MM/yyyy")</li>
                                    </ul>
                                    <textarea type="text" class="form-control textarea-autosize" rows="25" > @Model.Content </textarea>
                                   
                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    <li><a href="#">@Model.category.Name</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>